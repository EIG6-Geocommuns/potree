{
    "include": [
        "src/Potree.js"
    ],

    "compilerOptions": {
        /* Type Checking */
        //"strict": "true", // Enable various type checking flags
        /* Modules */
        "moduleResolution": "nodenext",
        /* Emit */
        "declaration": true, // Generate `.d.ts` files
        "declarationMap": true, // Generate source map for `.d.ts` files
        "emitDeclarationOnly": true, // *Only* emit `.d.ts` files
        "outDir": "types", // `.js` and `.d.ts` will be emitted here
        /* JavaScript Support */
        "allowJs": true,
        "checkJs": true, // Errors are reported in JS files
        /* Interop Constraints */
        "allowSyntheticDefaultImports": true,
        /* Language and Environment */
        "lib": ["es2019", "dom"], // Other libs are allowed
        "target": "es6",
        /* Completeness */
        "skipLibCheck": true // Skip type checking of declaration files
    }
}
